<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="back_button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="age">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="movie_name">
        <item name="android:textColor">#ECECEC</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="genre">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/genre</item>
    </style>

    <style name="rating_bar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/disable_star</item>
        <item name="colorControlActivated">@color/enable_star</item>
    </style>

    <style name="reviews">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/disable_star</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="storyline">
        <item name="android:textColor">@color/storyline</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="storyline_content">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="cast_header">
        <item name="android:textColor">@color/cast</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="actor_image">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="actor">
        <item name="android:fontFamily">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/actor_name</item>
    </style>
</resources>